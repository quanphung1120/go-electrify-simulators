{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env.local", "**/.env"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        ".nuxt/**",
        ".output/**",
        "!.next/cache/**"
      ]
    },
    "client#build": {
      "outputs": ["dist/**"]
    },
    "server#build": {
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": ["$TURBO_DEFAULT$", "tsconfig.json", "**/tsconfig.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "client#dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "server#dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".eslintrc*",
        "eslint.config.*",
        "**/.eslintrc*",
        "**/eslint.config.*"
      ],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"],
      "cache": false,
      "inputs": [
        "$TURBO_DEFAULT$",
        ".eslintrc*",
        "eslint.config.*",
        "**/.eslintrc*",
        "**/eslint.config.*"
      ]
    },
    "test": {
      "dependsOn": ["^build", "^test"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/*.test.*",
        "**/*.spec.*",
        "jest.config.*",
        "vitest.config.*"
      ],
      "outputs": ["coverage/**"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "format": {
      "cache": false,
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/*.md",
        ".prettierrc*",
        "prettier.config.*"
      ],
      "outputs": []
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
